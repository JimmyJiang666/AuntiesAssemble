  <div class="header1">
    Menu Creation
  </div>

  <!-- second try -->
  <div class="content1">
    <form class="" action="/menucreation/<%=_id%>" method="post">
      <div class="form-group">
        <label for="inputAddress">Business Name</label>
        <input type="text" class="form-control" id="inputAddress" name="storeName" placeholder="Name of your business" value="" required>
      </div>
      <div class="form-group">
        <label for="inputAddress">Business Description</label>
        <input type="text" class="form-control" id="inputAddress" name="storeInfo" placeholder="Short intro about the food you provide" value="" required>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputAddress">Item Name</label>
          <input type="text" class="form-control" name="dish1Name" placeholder="Name of your first dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputAddress">Description</label>
          <input type="text" class="form-control" name="dish1Des" placeholder="Description of your first dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">Price</label>
          <input type="number" class="form-control" name="dish1Price" placeholder="Price of your first dish" value="" required step=".01">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputAddress">Item Name</label>
          <input type="text" class="form-control" name="dish2Name" placeholder="Name of your second dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputAddress">Description</label>
          <input type="text" class="form-control" name="dish2Des" placeholder="Description of your second dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">Price</label>
          <input type="number" class="form-control" name="dish2Price" placeholder="Price of your second dish" value="" required step=".01">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputAddress">Item Name</label>
          <input type="text" class="form-control" name="dish3Name" placeholder="Name of your third dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputAddress">Description</label>
          <input type="text" class="form-control" name="dish3Des" placeholder="Description of your third dish" value="" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">Price</label>
          <input type="number" class="form-control" name="dish3Price" placeholder="Price of your third dish" value="" required step=".01">
        </div>
      </div>
  </div>
  <!-- personal details -->

  <div class="personal_heading header1">
    Personal Details
  </div>
  <div class="content1">
    <div class="personal">
      <div class="form-row">
        <div class="col">
          <label for="inputEmail4">First Name</label>
          <input type="text" class="form-control" name="firstName" placeholder="Please enter your First name" required>
        </div>
        <div class="col">
          <label for="inputLastName4"> Last Name</label>
          <input type="text" class="form-control" name="lastName" placeholder="Please enter your Last name" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" id="inputAddress" name="address" placeholder="1234 Main St" required>
      </div>
      <div class="form-group">
        <label for="inputAddress2">Address 2</label>
        <input type="text" class="form-control" id="inputAddress2" name="address2" placeholder="Apartment, studio, or floor">
      </div>


      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputAddress">Gender </label>
          <input type="text" class="form-control" name="gender" placeholder="Please input your gender" value="" required>
        </div>

      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputAddress">Nationality </label>
          <input type="text" class="form-control" name="nationality" placeholder="Please state your Nationality" value="" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputAddress">Country of Residence</label>
          <input type="text" class="form-control" name="countryOfResidence" placeholder="Please state your Country of Residence" value="" required>
        </div>

      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Please give description about your old/current job if you have/had one:</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="lastJob" required></textarea>
      </div>


    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>


  <footer class="white" id="footer">
    <i class="fab fa-twitter footer-icon"></i>
    <i class="fab fa-facebook footer-icon"></i>
    <i class="fab fa-instagram footer-icon"></i>
    <i class="fas fa-envelope footer-icon"></i>

