<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/6fad3641f2.js" crossorigin="anonymous"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700;900&family=Ubuntu&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=ZCOOL+QingKe+HuangYou&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/vendorlist.css">
  <title>Vendor List</title>
</head>

<body>
  <div class="colored" id="title">
    <nav class='navbar navbar-expand-lg navbar-dark'>
      <a class="navbar-brand title-font" id="title1 " href="/">AuntiesAssemble</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <ul class='navbar-nav ml-auto'>

          <li class='nav-item'>
            <a href="/myorders/<%= customerId %>">My Orders</a>
          </li>

        </ul>
      </div>

    </nav>
  </div>
  <div class="header1">
    Vendors List
  </div>
  <!-- cards vendors -->
  <div class="row row-cols-1 row-cols-md-3 content1">
    <!-- here you'll put the loop  -->
    <% vendorList.forEach(function(vendorMenu) { %>
    <div class="col mb-4">
      <div class="card h-100 text-white bg-info mb-3">
        <div class="card-body">
          <a class="card-title text-white text-left" href="/vendormenu/<%= customerId %>/<%= vendorMenu._id %>"><%= vendorMenu.storeName %></a>
          <!-- this will be text for their business description -->
          <p class="card-text"><%= vendorMenu.storeInfo %></p>
        </div>
      </div>
    </div>
    <% }); %>



  </div>

  <footer class="white" id="footer">
    <i class="fab fa-twitter footer-icon"></i>
    <i class="fab fa-facebook footer-icon"></i>
    <i class="fab fa-instagram footer-icon"></i>
    <i class="fas fa-envelope footer-icon"></i>

    <p class="footer-text">Â© Copyright 2020 AuntiesAssemble</p>

  </footer>

</body>

</html>


